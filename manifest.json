{
  "name": "Github Hidden Files",
  "version": "1.0",
  "description": "Hide files by extensions on github repos, compatible with Octotree",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "management",
    "webNavigation",
    "tabs",
    "http://github.com/",
    "https://github.com/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
